 void IniciarTropas (){
  	
  	for (int i = 1; i<25; ++i){
  		
     	territorio[i].tropas[0] = 0;
     	territorio[i].tropas[1] = 0;
     	territorio[i].tropas[2] = 1;
	  }	
  	
  }
  
  
  void TotalPaises(void){
  	
  	
  		for (int i = 1; i<25; ++i){
  			
  			if (territorio[i].jogador == 'A'){
  			    totalA = totalA + 1;
  			    
		  }
		  
		    if (territorio[i].jogador == 'B'){
		    	totalB = totalB + 1;
			}
  }
  	
  }
  
  
  void DistribuirTropas(){
  	
	int TdispA, TdispB,  y, z, w, x, t; //TdispA = tropas disponiveis para o jogador a //TdispB  = tropas disponiveis para o jogador b
  	
  	
  	TdispA = totalA/2;
  	TdispB = totalB/2;
  	
  	for (int s = 0; s < (totalA/2); ++s){  
  
  	printf("Jogador A tem %i tropas disponiveis\nDigite o numero do pais onde deseja colocar uma tropa:\n", TdispA);
  	scanf("%i", &x);
  	
  	y = territorio[x].tropas[0] * 100;
	z = territorio[x].tropas[1]  * 10;
	w = territorio[x].tropas[2] + y + z +1;
	
	territorio[x].tropas[0] = w/100;
	territorio[x].tropas[1] = (w - territorio[x].tropas[0] * 100) / 10;
	territorio[x].tropas[2] = (w - territorio[x].tropas[0] * 100 ) - territorio[x].tropas[1] * 10;
  	
  	territorio[x].coord1 =	territorio[x].tropas[0] + '0';
  	territorio[x].coord2 =  territorio[x].tropas[1] + '0';
  	territorio[x].coord3 =	territorio[x].tropas[2] + '0';
	
	printarmapa ();  
	      	
	  --TdispA;
	  system("cls");	
    
  }
  	for (int s = 0; s < (totalB/2); ++s){  
  
  	printf("Jogador B tem %i tropas disponiveis\nDigite o numero do pais onde deseja colocar uma tropa:\n", TdispB);
  	scanf("%i", &x);
  	
  	y = territorio[x].tropas[0] * 100;
	z = territorio[x].tropas[1]  * 10;
	w = territorio[x].tropas[2] + y + z +1;
	
	territorio[x].tropas[0] = w/100;
	territorio[x].tropas[1] = (w - territorio[x].tropas[0] * 100) / 10;
	territorio[x].tropas[2] = (w - territorio[x].tropas[0] * 100 ) - territorio[x].tropas[1] * 10;
  	
  	territorio[x].coord1 =	territorio[x].tropas[0] + '0';
  	territorio[x].coord2 =  territorio[x].tropas[1] + '0';
  	territorio[x].coord3 =	territorio[x].tropas[2] + '0';
	
	printarmapa ();  
  	
	  --TdispB;
	  system("cls");
  	
  }
  
  
  
}
  
  


