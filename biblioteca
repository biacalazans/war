void lernome (void) {
	
	printf ("DIGITE O NOME DO JOGADOR A:\n");
	scanf (" %[^\n]s\n", &playera);
	
	printf ("DIGITE O NOME DO JOGADOR B:\n");
	scanf (" %[^\n]s\n", &playerb);
	

}


void printarmapa (void) {

printf("JOGADOR A: %s                    JOGADOR B: %s\n\n\n", playera, playerb);

for (int i=0;i<35;++i){
	for (int j=0;j<49;j++){
	   printf("%c", matriz[i][j]);
	} 
	printf("\n");
}
}


int sorteio (void){
	int i, x, y, n=0;
    srand(time(NULL));
    
    
	for(i = 0;i<24;i++){
       
        x = (rand()%24)+1;
        n=0;
        
        while(n<25){
        	if(achou(x)) {
        		x = (rand()%24)+1;
        		n=0;
	    	}
			n++;	
		}
			paises[i] = x;
		
    }
    
    return 0;
}

int achou(int x){

	int n; 
	
		n=0;
	
		while(n<25){
		
       	  if(paises[n] == x ){
        	 	return 1;
			 } 
			n++;
		}
	return 0;
	
}


int dados(){

	int result;

	result=(rand()%6+1);
	

  return result;
}



